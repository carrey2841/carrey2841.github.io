{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es2018",
      "lib": ["es2015", "es2017", "dom", "scripthost"],
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "baseUrl": "src",
      "skipLibCheck": true,
      "strict": true,
      "paths": {
        "~/*": ["*"]
      },
      "experimentalDecorators": true
    }
  }
  